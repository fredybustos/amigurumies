---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets'
import Logo from '../../public/logo.png'
import Amigurumis from '@/components/amigurumis/index.tsx'

---

<Layout title="Amigurumis" description="Search great amigurumis!">
	<main class="max-w-screen-xl m-auto" transition:name=`amigu box`>
		<figure class="w-full max-w-[70%] m-auto">
			<Image
				src="/logo.png"
				alt="logo-amigu"
				width={Logo.width}
				height="250"
				format="webp"
				quality={80}
				transition:name='amiguimage image'
			/>
		</figure>
		<Amigurumis client:load />
	</main>
</Layout>

<style is:global>
	body {
		font-family: 'Rubik Variable', sans-serif;
		background: rgb(35, 35, 35);
	}
</style>